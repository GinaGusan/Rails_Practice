.container
  %h1.text-center.heading-font
    Edit album
  .row
    .col-md-6.col-md-offset-3
      = form_for [@user, @album] do |f|
        .form-group
          = f.label 'Title'
          = f.text_field :title, {:class => "form-control"}
        .form-group
          = f.label 'Description'
          = f.text_field :description, {:class => "form-control"}
        = f.submit 'Submit', :class => :"btn btn-primary"
