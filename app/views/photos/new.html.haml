.container
  %h1.text-center.heading-font
    New photo
  .row
    .col-md-6.col-md-offset-3
      = form_for [:user, :album, @photo] do |f|
        .form-group
          = f.label 'Photo description'
          = f.text_field :description, {:class => "form-control"}
        .form-group
          = f.file_field :image
        = f.submit :class => "btn btn-primary"
