.container
  %h1.text-center.heading-font
    Edit profile
  .row
    .col-md-6.col-md-offset-3
      = form_for [current_user] do |f|
        .form-group
          = f.label 'Add name and surname'	
          = f.text_field :name, {:class =>"form-control"}
        .form-group
          = f.label 'Edit photo'
          = image_tag current_user.image.url(:medium), {:class => "img-responsive"}
          = f.file_field :image
        = f.submit 'Submit', :class => "btn btn-primary"


