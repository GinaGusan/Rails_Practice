%li.dropdown-header
  = link_to current_user.name, user_path(current_user), :method => :get
%li.dropdown
  %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
    = image_tag current_user.image.url(:thumb), :class => "image-circle"
  %ul.dropdown-menu
    %li
      = link_to 'My Albums', user_albums_path(current_user), :method => :get
    %li
      = link_to 'Edit profile', edit_user_path(current_user), :method => :get
    %li
      = link_to 'All users', users_path(current_user), :method => :get
    %li.divider{:role => "separator"}
    %li
      = link_to 'Sign Out', destroy_user_session_path, :method => :delete